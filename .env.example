# =======================================
#  .env - Miljövariabler för AutoDocX     
# =======================================

# API-nycklar
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
AZURE_OPENAI_API_KEY=
GROQ_API_KEY=

# Vilken provider (lmstudio, anthropic, openai, azure, groq) som ska vara standard
DEFAULT_MODEL=lmstudio

# Standard-sökväg till projektets kod
DEFAULT_PATH=./Workspace/

# Ignorerade sökvägar (kommaseparerad lista)
IGNORE_PATHS=node_modules,.git,venv

# Gemensamma LLM-parametrar
TEMPERATURE=0.7
MAX_TOKENS=60000
TOP_P=0.9

# Prompt-templates / mallar
PROMPT_DEV_FULL=Developer-Full-Prompt-Template
PROMPT_DEV_SUM=Developer-Summary-Prompt-Template
PROMPT_DEV_SHORT=Developer-Short-Prompt-Template
PROMPT_USER_FULL=User-Full-Prompt-Template
PROMPT_USER_SUM=User-Summary-Prompt-Template
PROMPT_USER_SHORT=User-Short-Prompt-Template
PROMPT_AI_FULL=AI-Full-Prompt-Template
PROMPT_AI_SUM=AI-Summary-Prompt-Template
PROMPT_AI_SHORT=AI-Short-Prompt-Template

# LM Studio-specifika inställningar
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=model-identifier

# Anthropic (Claude) inställningar
CLAUDE_HAIKU_MODEL=claude-3-haiku-20240307
CLAUDE_SONNET_MODEL=claude-3-sonnet-20240229
CLAUDE_OPUS_MODEL=claude-3-opus-20240229

# OpenAI-inställningar
GPT4_MODEL=gpt-4
GPT35_MODEL=gpt-3.5-turbo

# Azure OpenAI-inställningar
AZURE_BASE_URL=https://your-resource.openai.azure.com
AZURE_API_VERSION=2024-02-15-preview
AZURE_GPT4_MODEL=gpt-4
AZURE_GPT35_MODEL=gpt-3.5-turbo

# Groq-inställningar
GROQ_MODEL=mixtral-8x7b-32768
